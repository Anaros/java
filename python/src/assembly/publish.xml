<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>publish</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>README.txt</source>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>CHANGES.txt</source>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>setup.py</source>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>tox.ini</source>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>pytest.ini</source>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>.gitignore</source>
      <lineEnding>unix</lineEnding>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>rosette</directory>
      <outputDirectory>rosette</outputDirectory>
      <excludes>
        <exclude>DEV-README.md</exclude>
        <exclude>**/*.pyc</exclude>
        <exclude>**/__pycache__</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>tests</directory>
      <outputDirectory>tests</outputDirectory>
      <excludes>
        <exclude>**/*.pyc</exclude>
        <exclude>**/__pycache__</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>examples</directory>
      <outputDirectory>examples</outputDirectory>
      <excludes>
        <exclude>**/*.pyc</exclude>
        <exclude>**/__pycache__</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
