<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.basistech.rosette.api</groupId>
        <artifactId>bindings</artifactId>
        <version>0.5.0-SNAPSHOT</version>
    </parent>
    <groupId>com.basistech.rosette.api</groupId>
    <artifactId>csharp</artifactId>
    <version>0.5.0-SNAPSHOT</version>
    <packaging>pom</packaging>
	
	<properties>
		<msbuild.exe>C:\WINDOWS\Microsoft.NET\Framework\v2.0.50727\msbuild.exe</msbuild.exe>
		<msbuild.configuration>Release</msbuild.configuration>
	</properties>
	
	<build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>run-tests</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>tox</executable>
                        </configuration>
                    </execution>
                    <execution>
                        <id>epydoc</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>.tox/py27/bin/epydoc</executable>
                            <arguments>
                                <argument>-v</argument>
                                <argument>--no-private</argument>
                                <argument>--no-frames</argument>
                                <argument>--css</argument>
                                <argument>src/styles/epydoc.css</argument>
                                <argument>-o</argument>
                                <argument>target/html</argument>
                                <argument>rosette/*.py</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <workingDirectory>.</workingDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>composer update</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>composer</executable>
                            <arguments>
                                <argument>update</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>php-cs-fixer-source</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${basedir}/vendor/bin/php-cs-fixer</executable>
                            <arguments>
                                <argument>fix</argument>
                                <argument>./source</argument>
                                <argument>--dry-run</argument>
                                <argument>--diff</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>php-cs-fixer-tests</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${basedir}/vendor/bin/php-cs-fixer</executable>
                            <arguments>
                                <argument>fix</argument>
                                <argument>./tests</argument>
                                <argument>--dry-run</argument>
                                <argument>--diff</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>php-cs-fixer-examples</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${basedir}/vendor/bin/php-cs-fixer</executable>
                            <arguments>
                                <argument>fix</argument>
                                <argument>./examples</argument>
                                <argument>--dry-run</argument>
                                <argument>--diff</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>phpunit</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${basedir}/vendor/bin/phpunit</executable>
                            <arguments>
                                <argument>-v</argument>
                                <argument>--bootstrap</argument>
                                <argument>./vendor/autoload.php</argument>
                                <argument>./tests/rosette/api/ApiTest.php</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>phpdoc</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${basedir}/vendor/bin/phpdoc</executable>
                            <arguments>
                                <argument>-d</argument>
                                <argument>./source</argument>
                                <argument>-t</argument>
                                <argument>./target/html</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.4</version>
                <executions>
                    <execution>
                        <id>assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>github</finalName>
                    <descriptors>
                        <descriptor>publish.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>