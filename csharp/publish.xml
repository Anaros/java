<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>publish</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>README.md</source>
        </file>
        <file>
            <source>rosette_api.sln</source>
        </file>
        <file>
            <source>.gitignore</source>
        </file>

    </files>
    <fileSets>
        <fileSet>
            <directory>rosette_api</directory>
            <includes>
                <include>Properties</include>
                <include>CAPI.cs</include>
                <include>rosette_api.csproj</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>rosette_apiExamples</directory>
            <includes>
                <include>**.cs</include>
                <include>**.md</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>rosette_apiExamples</directory>
            <includes>
                <include>Properties</include>
                <include>rosette_apiExamples.csproj</include>
                <include>rosette_apiExamples.sln</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>rosette_apiUnitTests</directory>
            <includes>
                <include>Properties</include>
                <include>**.cs</include>
                <include>rosette_apiUnitTests.csproj</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
